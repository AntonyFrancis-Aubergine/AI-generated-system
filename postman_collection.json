{
  "info": {
    "name": "Cab Booking Service API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "API collection for Cab Booking Service MVP"
  },
  "item": [
    {
      "name": "Authentication",
      "description": "Authentication endpoints for user login and registration",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"yourpassword\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "login"]
            },
            "description": "Login with user credentials to get authentication tokens. Returns access token and user details upon successful authentication."
          },
          "response": []
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@example.com\",\n  \"password\": \"securepassword\",\n  \"name\": \"New User\",\n  \"contactNumber\": \"9876543210\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "register"]
            },
            "description": "Self-register a new user account. By default, users are registered with the USER role."
          },
          "response": []
        },
        {
          "name": "Create User (Admin Only)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "description": "Admin access token required"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newstaff@example.com\",\n  \"password\": \"securepassword\",\n  \"name\": \"Staff Member\",\n  \"contactNumber\": \"9876543210\",\n  \"role\": \"ADMIN\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "users"]
            },
            "description": "Create a new user with any role (Admin access only). Requires authentication and admin role."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Users",
      "description": "User management endpoints",
      "item": [
        {
          "name": "Get Users (Admin Only)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "description": "Admin access token required"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/users?page=1&limit=10&name=&email=&role=&isActive=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (1-based)"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Number of records per page"
                },
                {
                  "key": "name",
                  "value": "",
                  "description": "Filter by name"
                },
                {
                  "key": "email",
                  "value": "",
                  "description": "Filter by email"
                },
                {
                  "key": "role",
                  "value": "",
                  "description": "Filter by role (USER, ADMIN, DRIVER)"
                },
                {
                  "key": "isActive",
                  "value": "true",
                  "description": "Filter by active status"
                }
              ]
            },
            "description": "Get a list of users with pagination and filtering options. Admin access only."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Vehicles",
