              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "description": "Admin access token required"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"registrationNumber\": \"KA01AB1234\",\n  \"model\": \"Swift Dzire\",\n  \"make\": \"Maruti Suzuki\",\n  \"year\": 2022,\n  \"color\": \"White\",\n  \"seatingCapacity\": 4,\n  \"fuelType\": \"Petrol\",\n  \"status\": \"ACTIVE\"\n}"
