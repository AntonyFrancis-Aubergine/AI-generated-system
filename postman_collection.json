                },
                {
                  "key": "make",
                  "value": "",
                  "description": "Filter by vehicle make"
                },
                {
                  "key": "model",
                  "value": "",
                  "description": "Filter by vehicle model"
                },
                {
                  "key": "status",
                  "value": "",
                  "description": "Filter by status (ACTIVE, MAINTENANCE, INACTIVE)"
                },
                {
                  "key": "isActive",
                  "value": "true",
                  "description": "Filter by active status"
                },
                {
                  "key": "isAssigned",
                  "value": "false",
                  "description": "Filter by assignment status"
                }
              ]
            },
            "description": "Get a list of vehicles with pagination and filtering options. Admin access only."
          },
          "response": []
        },
        {
          "name": "Get Vehicle by ID (Admin Only)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "description": "Admin access token required"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/vehicles/:vehicleId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "vehicles", ":vehicleId"],
              "variable": [
                {
                  "key": "vehicleId",
                  "value": "uuid-goes-here",
                  "description": "UUID of the vehicle"
                }
              ]
            },
            "description": "Get details of a specific vehicle by ID. Admin access only."
          },
          "response": []
        },
        {
          "name": "Update Vehicle (Admin Only)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "description": "Admin access token required"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"registrationNumber\": \"KA01AB1234\",\n  \"model\": \"Swift Dzire\",\n  \"make\": \"Maruti Suzuki\",\n  \"year\": 2022,\n  \"color\": \"Silver\",\n  \"seatingCapacity\": 4,\n  \"fuelType\": \"Petrol\",\n  \"status\": \"MAINTENANCE\",\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/vehicles/:vehicleId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "vehicles", ":vehicleId"],
              "variable": [
                {
                  "key": "vehicleId",
                  "value": "uuid-goes-here",
                  "description": "UUID of the vehicle to update"
                }
              ]
            },
            "description": "Update a vehicle's details. Only need to include fields that require updates. Admin access only."
          },
          "response": []
        },
        {
          "name": "Delete Vehicle (Admin Only)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "description": "Admin access token required"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/vehicles/:vehicleId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "vehicles", ":vehicleId"],
              "variable": [
                {
                  "key": "vehicleId",
                  "value": "uuid-goes-here",
                  "description": "UUID of the vehicle to delete"
                }
              ]
            },
            "description": "Delete a vehicle from the system. Admin access only."
          },
          "response": []
        }
      ]
    },
    {
