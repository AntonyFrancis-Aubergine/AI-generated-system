              "raw": "{{baseUrl}}/api/v1/admin/vehicles?page=1&limit=10&make=&model=&status=&isActive=true&isAssigned=false",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "vehicles"],
              "query": [
                {
                  "key": "page",
